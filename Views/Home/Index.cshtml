@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center my-4">
    <h1 class="display-4 mb-4">Sistema de Controle Interno - LH Pet</h1>
    
    <!-- Tabela de Clientes -->
    <h2 class="h4 mb-3">Clientes</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Cpf</th>
                <th scope="col">Email</th>
                <th scope="col">Paciente</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dado in @ViewBag.listaClientes)
            {
                <tr>
                    <th scope="row">@dado.Id</th>
                    <td>@dado.Nome</td>
                    <td>@dado.Cpf</td>
                    <td>@dado.Email</td>
                    <td>@dado.Paciente</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Tabela de Fornecedores -->
    <h2 class="h4 mb-3 mt-5">Fornecedores</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Cnpj</th>
                <th scope="col">Email</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in @ViewBag.listaFornecedores)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Nome</td>
                    <td>@item.Cnpj</td>
                    <td>@item.Email</td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Texto de rodapé -->
    <div class="mt-5">
        <h1 class="display-4">Hello word</h1>
        <p>By. Renato França</p>
    </div>
</div>
